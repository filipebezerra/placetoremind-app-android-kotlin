<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/reminderListFragment"
    >

    <fragment
        android:id="@+id/reminderListFragment"
        android:name="app.filipebezerra.placetoremind.reminderslist.ReminderListFragment"
        android:label="ReminderListFragment"
        tools:layout="@layout/fragment_reminders"
        >
        <action
            android:id="@+id/action_reminderListFragment_to_saveReminderFragment"
            app:destination="@id/saveReminderFragment"
            />
    </fragment>

    <fragment
        android:id="@+id/saveReminderFragment"
        android:name="app.filipebezerra.placetoremind.savereminder.SaveReminderFragment"
        android:label="Add Reminder"
        tools:layout="@layout/fragment_save_reminder"
        >
        <action
            android:id="@+id/action_saveReminderFragment_to_reminderListFragment"
            app:destination="@id/reminderListFragment"
            />
        <action
            android:id="@+id/action_saveReminderFragment_to_selectLocationFragment"
            app:destination="@id/selectLocationFragment"
            />
    </fragment>

    <fragment
        android:id="@+id/selectLocationFragment"
        android:name="app.filipebezerra.placetoremind.savereminder.selectreminderlocation.SelectLocationFragment"
        android:label="Select Location"
        tools:layout="@layout/fragment_select_location"
        />

    <fragment
        android:id="@+id/authenticationFragment"
        android:name="app.filipebezerra.placetoremind.authentication.AuthenticationFragment"
        tools:layout="@layout/authentication_fragment"
        />

    <action
        android:id="@+id/global_action_authenticationFragment"
        app:destination="@id/authenticationFragment"
        />
</navigation>